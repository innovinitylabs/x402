    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "prettier": "^3.5.2",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0"
