  "description": "Universal payment server for x402 protocol - handles both widget donations and AI agent payments",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "lint": "eslint . --ext .ts --fix",
    "test:ai": "node test-ai-client.js"
