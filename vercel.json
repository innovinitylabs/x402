{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/widget.js",
      "dest": "/public/widget.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}